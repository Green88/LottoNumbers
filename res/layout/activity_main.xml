<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" xmlns:android="http://schemas.android.com/apk/res/android"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/help_bt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="50"
            android:text="Help" />

        <Button
            android:id="@+id/about_bt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="50"
            android:text="About" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30" >

        <Button
            android:id="@+id/settings_bt"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="top"
            android:text="Settings"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50" >

        <Button
            android:id="@+id/generate_bt"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@android:color/holo_blue_bright"
            android:text="Start lotto"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>